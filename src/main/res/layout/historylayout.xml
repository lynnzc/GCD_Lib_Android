<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#4951ffcc">
    <ListView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/historylist"
        android:layout_marginBottom="48dip" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="48dip"
        android:id="@+id/pre_page_btn"
        android:layout_toEndOf="@id/historylist"
        android:layout_toRightOf="@id/historylist"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:text="@string/pre_page_btn"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="48dip"
        android:layout_toEndOf="@id/historylist"
        android:layout_toRightOf="@id/pre_page_btn"
        android:id="@+id/next_page_btn"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:text="@string/next_page_btn"/>
</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fffefffd">
    <ListView
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:id="@+id/bookmarklist"
        android:choiceMode="singleChoice"
        android:divider="@android:color/transparent"
        android:dividerHeight="20dip"
        android:layout_marginRight="30dip"
        android:layout_marginLeft="30dip"
        android:footerDividersEnabled="true" />
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="48dip"
            android:layout_weight="1"
            android:gravity="center"
            android:id="@+id/pre_page_btn"
            android:background="@drawable/function_next_page_action"
            android:text="@string/pre_page_btn"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="48dip"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@drawable/function_next_page_action"
            android:id="@+id/next_page_btn"
            android:text="@string/next_page_btn"/>
    </LinearLayout>
</LinearLayout>